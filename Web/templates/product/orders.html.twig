{% extends 'baseBack.html.twig' %}

{% block title %}Product index{% endblock %}

{% block content %}
    <div class="card-title">Table de produits</div>


    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Client</th>
            <th>TÃ©lephone</th>
