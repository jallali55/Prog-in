{% extends 'baseBack.html.twig' %}

{% block title %}Product index{% endblock %}

{% block content %}
    <div class="card-title">Table de produits</div>


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom de produit</th>
                <th>Prix vente</th>
                <th>Prix location</th>
                <th>quantite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.pricer }}</td>
                <td>{{ product.quantity}}</td>
                <td>
                    <ul class="list-inline m-0">

                        <li class="list-inline-item">
                            <a href="{{ path('product_edit', {'id': product.id}) }}">
                                <button class="btn btn-success btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Edit">
                                    <i class="fa fa-edit"></i></button>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="{{ path('product_show', {'id': product.id}) }}">
                                <button class="btn btn-danger btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="show">
                                    <i class="fa fa-list"></i></button>
                            </a>
                        </li>
                    </ul>
              <!--      <a href="{{ path('product_show', {'id': product.id}) }}">
                        <button type="button" class="btn btn-info">Afficher</button>
                    </a>

                    <a href="{{ path('product_edit', {'id': product.id}) }}">
                        <button type="button" class="btn btn-success">Modifier</button>
                    </a>-->
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun produit</td>
            </tr>
        {% endfor %}
        </tbody>

    </table>


    <div class="row mt-3">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <a href="{{ path('product_new') }}">
                <center>
                    <button type="submit" class="btn btn-light btn-round px-5">Ajouter un produit</button>
                </center></a>
        </div>
        <div class="col-lg-3"></div>
    </div><!--End Row-->

{% endblock %}
